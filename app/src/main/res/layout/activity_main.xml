<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/hu"
tools:context=".MainActivity"
android:id="@+id/buddy">



<TextView
    android:id="@+id/textView"
    android:layout_width="367dp"
    android:layout_height="70dp"
    android:fontFamily="@font/b_regular"

    android:layout_marginStart="10dp"
    android:paddingStart="2dp"
    android:paddingTop="1dp"
    android:paddingEnd="3dp"
    android:paddingBottom="1dp"
    android:text="match   maker"
    android:textAlignment="center"
    android:textAllCaps="true"
    android:textColor="@color/white"
    android:textSize="42dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.043" />

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="560dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="49dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:paddingStart="5dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"

                >

        <EditText
            android:id="@+id/editTextPersonName4"
            android:layout_width="290dp"
            android:layout_height="49dp"
            android:background="@color/white"
            android:ems="10"
            android:hint=" Enter your name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="#3A3939"
            android:textSize="20sp"
            android:fontFamily="@font/averialibre_regular"
            android:paddingStart="8dp"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintVertical_bias="0.274" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="49dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:paddingStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center">

            <EditText
                android:id="@+id/editTextPersonName5"
                android:layout_width="290dp"
                android:layout_height="49dp"
                android:background="@color/white"
                android:contextClickable="true"
                android:ems="10"
                android:hint="Enter registration no."
                android:inputType="number"
                android:paddingStart="11dp"
                android:textColor="@color/black"
                android:textColorHint="#3A3939"
                android:textSize="20sp"
                android:fontFamily="@font/averialibre_regular"
                app:layout_constraintHorizontal_bias="0.375"

                app:layout_constraintVertical_bias="0.384" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="49dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:paddingStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"

                >

            <Spinner
            android:id="@+id/spinner1"
            style="@android:style/Widget.Spinner.DropDown"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:background="@color/white"
                android:layout_gravity="start"

            android:contentDescription="@string/app_name"
            android:outlineSpotShadowColor="@color/black"

            android:theme="@style/ThemeOverlay.AppCompat.Light"/>


            </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@color/black"
            android:text="Select your  gender :-"
            android:textColor="@color/white"
            android:textColorHint="#3A3939"
            android:textSize="21sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:fontFamily="@font/averialibre_regular"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/boy"
                android:backgroundTint="@color/black"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/girl"
                android:backgroundTint="@color/black"/>


        </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poorstory_regular"
                />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="267dp"
                android:layout_height="42dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poorstory_regular"/>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="199dp"
                android:layout_height="43dp"
                android:text=""
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poorstory_regular"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>








</androidx.constraintlayout.widget.ConstraintLayout>